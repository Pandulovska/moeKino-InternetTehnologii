@model IEnumerable<moeKino.Models.Film>

@{
    ViewBag.Title = "Index";
}




<table  @*class="table"*@> 
    <tr>
        <th>
            <img src="https://media.giphy.com/media/8754ImlPF86US07FUi/source.gif" width="200px;">
            <p>
                @if (User.IsInRole("Admin")) {
                @Html.ActionLink("Create New", "Create", new { @class = "btn btn-info" })
                }
            </p>
        
        </th>
     
    

@foreach (var item in Model) {
   
   <tr class="col-md-4">
       <td>


           <br>
           <img src="@item.Url" width="250px" />

           <br>
           <p style="font-size:30px;color:rgb(3,174,218)">  @Html.DisplayFor(modelItem => item.Name)</p>
           @if (User.IsInRole("Admin")) {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id },new { @class = "btn btn-warning" })
            }
           @if (User.IsInRole("User") || User.IsInRole("Visitor") || User.IsInRole("Admin")) {
           @Html.ActionLink("Details", "Details", new { id = item.Id },new { @class="btn btn-info"}) 
           }
           @if (User.IsInRole("Admin"))
           {
                @Html.ActionLink("Delete", "Delete", new { id = item.Id },new { @class="btn btn-danger"})

           }
           <br>
           <br>
       </td>
       
     
    </tr>
  
}

</table>
