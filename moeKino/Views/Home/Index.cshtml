<div class="container body-content p-0 mb-3" style="background-color:white;width:62%;height:35%;background-image:url(../../Content/cinema2.jpg);background-repeat:no-repeat;">
    <div>

        <div style="margin-top:15px;height:550px">
            <center>
                <div id="carousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ul class="carousel-indicators">
                        <li data-target="#carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel" data-slide-to="1"></li>
                        <li data-target="#carousel" data-slide-to="2"></li>
                        <li data-target="#carousel" data-slide-to="3"></li>
                        <li data-target="#carousel" data-slide-to="4"></li>
                    </ul>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Content/4.jpg" alt="First slide" style="height:468px;width:840px;">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/5.jpg" alt="Second slide" style="height:468px;width:840px;">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/6.jpg" alt="Third slide" style="height:468px;width:840px;">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/1.jpg" alt="Fourth slide" style="height:468px;width:840px;">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/3.jpg" alt="Fifth slide" style="height:468px;width:840px;">
                        </div>
                    </div>
                    <!-- Left and right controls -->
                    <a class="carousel-control-prev" href="#carousel" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#carousel" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>


                </div>
            </center>




