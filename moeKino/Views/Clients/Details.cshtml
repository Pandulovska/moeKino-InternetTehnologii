@model moeKino.Models.Client

@{
    ViewBag.Title = "Details";
}

<div style="min-height:462px">
    <h2 style="color:#f1d8b3;" class="text-center">Details about the client</h2>

    <div style="color:#f1d8b3;font-size:15px;" class="mt-5 text-center">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd class="text-white">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd class="text-white">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>List of movies: </dt>
            <dd class="text-white">
                None
            </dd>

        </dl>
    </div>
    <p class="text-center mt-5">
        <img src="~/Content/back.png" width="35px;" /> @Html.ActionLink("Back to List", "Index",null, new { @class = "btn btn-default" })
   
        @Html.ActionLink("Edit", "Edit", new { id = Model.ClientId }, new { @class = "btn btn-warning" })
    </p>

</div>